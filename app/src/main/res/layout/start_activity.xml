<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.gsccs.smart.activity.WelcomeActivity">

    <ImageView
        android:id="@+id/header_img"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/welcome_top"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_img"
        android:layout_above="@+id/button_group">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:overScrollMode="never">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewGroup"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:orientation="horizontal" >

        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp">

        <Button
            android:id="@+id/choose_signin_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/action_sign_in"
            android:background="@drawable/signin_button_bg"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/choose_signup_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/action_sign_up"
            android:background="@drawable/signup_button_bg"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="150dp"/>
</RelativeLayout>
