<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tdata_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="轻度拥堵"/>

        <TextView
            android:id="@+id/tdata_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.2"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/tdata_status"
            android:layout_marginEnd="24dp" />

        <TextView
            android:id="@+id/tdata_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商圈名称"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_tdval_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      "
            android:background="@color/orange"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"
            android:layout_alignEnd="@+id/tdata_name" />
        <TextView
            android:id="@+id/tdata_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30.3m/H"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp" />
    </RelativeLayout>

</RelativeLayout>