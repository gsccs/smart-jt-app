<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gsccs.smart.activity.BusPathActivity"
    android:orientation="vertical"
    >
    <!--Toolbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        >
        <include layout="@layout/header"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/busline_bg"
        />
    <TextView
        android:id="@+id/tv_path_txt"
        android:padding="5dp"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="智慧公交"
        android:background="@color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/busline_bg"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.85"
        android:background="@color/busline_bg"
        >
        <TextView
            android:id="@+id/no_traffic"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_traffic"
            />
        <RelativeLayout
            android:id="@+id/protect_bridge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textColor="@color/text_default"
                android:textSize="20sp"
                />
            <ProgressBar
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/loading_text"
                />

        </RelativeLayout>
        <ListView
            android:visibility="gone"
            android:background="@color/white_text"
            android:id="@+id/route_paths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="10dp"
            />
    </RelativeLayout>
</LinearLayout>
