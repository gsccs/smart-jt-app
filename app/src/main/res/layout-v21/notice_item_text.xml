<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/bg_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/article_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="通知标题"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:ellipsize="end"
                    android:singleLine="true"/>

                <!--<View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/bg_grey"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="64dp"
                    android:layout_gravity="center_vertical"/>-->

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                        <ImageButton
                            android:id="@+id/btnComments"
                            android:layout_width="@dimen/tweets_list_item_button_size"
                            android:layout_height="@dimen/tweets_list_item_button_size"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_comment_black"
                            />

                        <TextView
                            android:id="@+id/notice_time"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="2017-01-01"
                            android:textSize="10sp"
                            android:textColor="@color/grey"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center_vertical"/>
                </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_grey"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/article_brief_text"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="@color/black"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/bg_grey"/>
</LinearLayout>